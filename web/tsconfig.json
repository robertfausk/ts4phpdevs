{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "es2015", // pretty defensive setting for older browsers
    "module": "commonjs",
    "strict": true,  // use 'strict'; e.g.
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  }
}
